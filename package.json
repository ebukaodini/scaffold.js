{
  "name": "scaffoldjs-cli",
  "version": "1.0.0",
  "description": "A CLI tool for scaffolding code templates",
  "main": "build/index.js",
  "scripts": {
    "clean": "rimraf build",
    "prepare": "npm run build",
    "build": "tsc && npm run copy:scaffolds",
    "postbuild": "chmod +x build/index.js",
    "dev": "concurrently 'tsc -w' 'npm run copy:scaffolds'",
    "copy:scaffolds": "mkdir -p build/scaffolds && cp -R src/scaffolds/. build/scaffolds/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "prettier --write --ignore-unknown ."
  },
  "bin": {
    "scaffold": "build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ebukaodini/scaffold.js.git"
  },
  "keywords": [
    "scaffold",
    "scaffolder",
    "scaffolding",
    "templates",
    "boilerplate",
    "boilerplates",
    "cli",
    "file",
    "bootstrap",
    "automation",
    "generate",
    "generator",
    "nodejs",
    "low-code"
  ],
  "author": "Ebuka Odini <ebukaodini@gmail.com> (https)",
  "license": "ISC",
  "dependencies": {
    "chalk": "^4.1.2",
    "pluralize": "^8.0.0",
    "yaml": "^2.3.2"
  },
  "devDependencies": {
    "@types/pluralize": "^0.0.33",
    "commander": "^14.0.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.2.5",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
